<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_video_top_box"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:gravity="center_vertical"
    android:visibility="gone"
    android:background="#66000000"
    >

    <ImageView
        android:id="@+id/app_video_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_chevron_left_white_36dp" />

    <com.github.jinsedeyuzhou.ijkplayer.play.MarqueeTextView
        android:id="@+id/app_video_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/app_video_finish"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="14sp"
        />

    <ImageView
        android:id="@+id/app_video_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/app_video_share"
        android:src="@drawable/video_unlock"
        />

    <ImageView
        android:id="@+id/app_video_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:src="@drawable/player_share_select"
        />


</RelativeLayout>